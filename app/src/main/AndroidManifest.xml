<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pby.find">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="com.example.pby.find.FindApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"

        android:theme="@style/AppTheme">
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.SendEmailActivity"></activity>
        <activity android:name=".activity.SetPasswordActivity"></activity>
        <activity android:name=".activity.MainActivity"></activity>
        <activity android:name=".activity.AreaActivity"></activity>
        <activity android:name=".activity.NewActivity"></activity>
        <activity android:name=".activity.DiscussActivity"></activity>
        <activity android:name=".activity.MessageActivity"></activity>
        <activity android:name=".activity.MessageFollowActivity" />
        <activity android:name=".activity.MineNoteActivity" />
        <activity android:name=".activity.SettingActivity" />
        <activity android:name=".activity.HistoryHeadActivity" />
        <activity android:name=".activity.SetAutographActivity"/>
        <activity android:name=".activity.ResetPasswordActivity" />
    </application>

</manifest>