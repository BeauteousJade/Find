<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/item_bg_normal">

    <ImageView
        android:id="@+id/item_recyclerView_area_imageView_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_recyclerView_area_textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="name"
        android:textColor="@color/item_textColor"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_recyclerView_area_imageView_icon"
        app:layout_constraintStart_toEndOf="@+id/item_recyclerView_area_imageView_icon"
        app:layout_constraintTop_toTopOf="@+id/item_recyclerView_area_imageView_icon" />
</android.support.constraint.ConstraintLayout>