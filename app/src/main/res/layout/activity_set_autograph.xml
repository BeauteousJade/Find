<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/activity_set_autograph_toolbar"
        layout="@layout/toolbar_back_ok" />

    <EditText
        android:id="@+id/activity_set_autograph_editText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/border_no"
        android:gravity="top"
        android:hint="个性签名，内容在0~50个字符之间"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_set_autograph_toolbar" />
</android.support.constraint.ConstraintLayout>