<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/item_bg_normal">

    <ImageView
        android:id="@+id/item_recyclerView_message_follow_imageView_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/icon_follow_01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_recyclerView_message_follow_textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:text="name"
        android:textColor="@color/item_textColor"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/item_recyclerView_message_follow_textView_time"
        app:layout_constraintLeft_toRightOf="@id/item_recyclerView_message_follow_imageView_head"
        app:layout_constraintTop_toTopOf="@id/item_recyclerView_message_follow_imageView_head" />

    <TextView
        android:id="@+id/item_recyclerView_message_follow_textView_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:text="name"
        android:textColor="@color/item_textColor"
        app:layout_constraintBottom_toBottomOf="@id/item_recyclerView_message_follow_imageView_head"
        app:layout_constraintLeft_toRightOf="@id/item_recyclerView_message_follow_imageView_head"
        app:layout_constraintTop_toBottomOf="@id/item_recyclerView_message_follow_textView_name" />

    <TextView
        android:id="@+id/item_recyclerView_message_follow_textView_follow"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_round_03"
        android:gravity="center"
        android:text="关注"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>