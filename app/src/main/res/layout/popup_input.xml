<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/item_bg_normal"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/popup_input_textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="title"
        android:textColor="#2fc0ed"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/popup_input_editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_bottom"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:maxLength="20"
        android:maxLines="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/popup_input_textView_title" />

    <TextView
        android:id="@+id/popup_input_textView_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="确定"
        android:textColor="#2fc0ed"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/popup_input_editText" />

    <TextView
        android:id="@+id/popup_input_textView_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text="取消"
        android:textColor="#2fc0ed"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/popup_input_textView_ok"
        app:layout_constraintRight_toLeftOf="@id/popup_input_textView_ok"
        app:layout_constraintTop_toTopOf="@id/popup_input_textView_ok" />
</android.support.constraint.ConstraintLayout>